<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grideperlevy"
    android:paddingLeft="23dp"
    android:paddingRight="23dp">

    <ImageView
        android:id="@+id/ac_login_im_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/ac_login_et_code"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="15dp"
        android:fontFamily="sans-serif-light"
        android:hint="@string/input_code"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:textSize="19sp"
        android:layout_alignBottom="@+id/ac_login_btn_get_code"
        android:layout_alignRight="@+id/ac_login_im_logo"
        android:layout_alignEnd="@+id/ac_login_im_logo"
        android:layout_marginRight="110dp"
        android:layout_marginEnd="110dp" />

    <Button
        android:id="@+id/ac_login_btn_get_code"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_get_code"
        android:fontFamily="sans-serif-light"
        android:text="@string/get"
        android:textAllCaps="false"
        android:textColor="@color/grideperlevy"
        android:textSize="17sp"
        android:layout_below="@+id/ac_login_im_logo"
        android:layout_alignLeft="@+id/ac_login_im_logo"
        android:layout_alignStart="@+id/ac_login_im_logo"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp" />

    <TextView
        android:id="@+id/ac_login_tv_description"
        style="@style/AcLoginDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/ac_login_description"
        android:textColor="@color/slate_gray"
        android:layout_below="@+id/ac_login_et_code"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/ac_login_btn_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_enter"
        android:fontFamily="sans-serif-light"
        android:text="@string/enter"
        android:textAllCaps="false"
        android:textColor="@color/grideperlevy"
        android:textSize="17sp" />
</RelativeLayout>