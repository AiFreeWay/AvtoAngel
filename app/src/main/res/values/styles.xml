<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AcLoginDescription">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="login_dialog" parent="Material.App.Dialog.Simple.Light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="CarCreateEditText" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/green_jungle_krayola</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/green_jungle_krayola</item>
        <item name="colorControlNormal">@color/green_jungle_krayola</item>
        <item name="colorControlActivated">@color/green_jungle_krayola</item>
    </style>

    <style name="LightCircularProgressDrawable" parent="Material.Drawable.CircularProgress">
        <item name="cpd_strokeColor">@color/white</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/green_jungle_krayola</item>
        <item name="colorSwitchThumbNormal">@color/marron</item>
    </style>
</resources>
