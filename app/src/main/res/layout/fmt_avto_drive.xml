<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grideperlevy">

    <TextView
        android:id="@+id/fmt_avto_drive_tv_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="@color/marron"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="Местоположение 'Тесла' изменилось!" />

    <Button
        android:id="@+id/fmt_avto_drive_btn_security"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Снять с охраны"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:drawableLeft="@drawable/ic_lock_white"
        android:drawablePadding="10dp"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/selector_get_code"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/fmt_avto_drive_btn_sound"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Выключить звук"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:drawableLeft="@drawable/ic_sound_off_white"
        android:drawablePadding="10dp"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/selector_get_code"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/fmt_avto_drive_btn_update"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Обновить"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:drawableLeft="@drawable/ic_update_white"
        android:drawablePadding="10dp"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/selector_get_code"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/fmt_avto_drive_btn_show_on_map"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/show_on_map"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/selector_enter"
        android:layout_gravity="center_horizontal" />
</LinearLayout>