<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grideperlevy">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:src="@drawable/logo"/>

    <TextView
        style="@style/AcLoginDescription"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="15dp"
        android:text="Приложение поможет уберечь ваш автомобиль от угона, благодаря отслеживанию его местоположения через GPC маяк."
        android:gravity="center"
        android:layout_below="@+id/fmt_login_et_code"
        android:textColor="@color/slate_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/green_jungle_krayola"/>

    <TextView
        android:id="@+id/fmt_about_tv_description"
        style="@style/AcLoginDescription"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_below="@+id/fmt_login_et_code"
        android:layout_margin="15dp"
        android:textColor="@color/slate_gray" />
</LinearLayout>