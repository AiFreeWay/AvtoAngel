<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    card_view:cardCornerRadius="0dp">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/v_record_tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Запись за"
            android:textColor="@color/slate_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/v_record_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/slate_gray"
            android:textSize="19sp"
            android:layout_below="@+id/v_record_tv_hint"
            android:layout_alignLeft="@+id/v_record_tv_hint"
            android:layout_alignStart="@+id/v_record_tv_hint" />
    </RelativeLayout>
</android.support.v7.widget.CardView>