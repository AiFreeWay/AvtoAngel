<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fmt_input_phone_root"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:paddingLeft="23dp"
    android:paddingRight="23dp">

    <com.example.maskedphoneedittext.MaskedPhoneEditText
        android:id="@+id/fmt_input_phone_et_number"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:hint="@string/phone_number"
        app:drawableLeft="@drawable/ic_phone_gray"
        app:fontFamily="sans-serif-light"
        app:templateFontSize="21sp"
        app:textFontSize="19sp"
        app:drawablePadding="15dp" />

    <Button
        android:id="@+id/fmt_input_phone_btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_green_disabled"
        android:enabled="false"
        android:fontFamily="sans-serif-light"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/silver_gray"
        android:textSize="17sp" />
</RelativeLayout>