<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:paddingLeft="23dp"
    android:paddingRight="23dp">


    <com.vicmikhailau.maskededittext.MaskedEditText
        android:id="@+id/fmt_input_phone_et_number"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:drawableLeft="@drawable/ic_phone_gray"
        android:drawablePadding="15dp"
        android:fontFamily="sans-serif-light"
        android:hint="@string/phone_number"
        android:inputType="phone"
        android:lines="1"
        android:maxLines="1"
        android:textSize="19sp"
        app:mask="+#(###) #### ## ##" />

    <Button
        android:id="@+id/fmt_input_phone_btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_green_disabled"
        android:enabled="false"
        android:fontFamily="sans-serif-light"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/silver_gray"
        android:textSize="17sp" />
</RelativeLayout>