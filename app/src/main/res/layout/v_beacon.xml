<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/v_beacon_im_image"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/v_beacon_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/v_beacon_im_image"
        android:layout_toRightOf="@+id/v_beacon_im_image"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:textSize="17sp"
        android:textColor="@color/slate_gray"/>

    <TextView
        android:id="@+id/v_beacon_tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_beacon_tv_title"
        android:layout_toEndOf="@+id/v_beacon_im_image"
        android:layout_toRightOf="@+id/v_beacon_im_image"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/silver_gray"/>

    <TextView
        android:id="@+id/v_beacon_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_beacon_tv_subtitle"
        android:layout_toEndOf="@+id/v_beacon_im_image"
        android:layout_toRightOf="@+id/v_beacon_im_image"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:textSize="19sp"
        android:textColor="@color/green_jungle_krayola"/>
</RelativeLayout>