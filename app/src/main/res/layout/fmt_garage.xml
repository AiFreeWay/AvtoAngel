<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grideperlevy"
    android:orientation="vertical">

    <ListView
        android:id="@+id/fmt_garage_lv_cars"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fmt_garage_btn_add_car"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:divider="@color/grideperlevy"
        android:dividerHeight="10dp" />

    <com.rey.material.widget.ProgressView
        android:id="@+id/fmt_garage_pv_progress"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:pv_autostart="false"
        app:pv_circular="false"
        app:pv_progressMode="indeterminate"
        app:pv_progressStyle="@style/Material.Drawable.CircularProgress" />

    <Button
        android:id="@+id/fmt_garage_btn_add_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_green_button"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="@string/add_car"
        android:textAllCaps="false"
        android:textColor="@color/grideperlevy"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/fmt_garage_tv_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/no_cars_in_garage"
        android:textAlignment="center"
        android:textColor="@color/gray_box"
        android:textSize="26sp"
        android:visibility="invisible" />
</RelativeLayout>