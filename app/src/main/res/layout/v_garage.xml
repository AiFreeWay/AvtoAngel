<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    card_view:cardCornerRadius="0dp">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/v_garage_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Описание"
            android:textColor="@color/slate_gray"
            android:textSize="19sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/v_garage_swt_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/v_garage_tv_title"
            android:background="@color/white"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="@string/notifications"
            android:textColor="@color/slate_gray"
            android:theme="@style/Color1SwitchStyle"
            app:switchPadding="15dp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/v_garage_swt_security"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/v_garage_swt_notifications"
            android:background="@color/white"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="@string/security_on"
            android:textColor="@color/slate_gray"
            android:theme="@style/Color1SwitchStyle"
            app:switchPadding="47dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>